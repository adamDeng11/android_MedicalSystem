<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_button_white_small_round_2"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <TextView
        android:id="@+id/tv_title"
        style="@style/PopupTitleTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="15dp"
        android:text="新增其他就诊人" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/shape_linearlayout_divider_thin_light_vertical"
        android:orientation="vertical"
        android:showDividers="middle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_require"
                android:drawablePadding="5dp"
                android:text="姓名"
                android:textColor="@color/gray_item_title"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:maxLength="8"
                android:layout_height="35dp"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="请填写"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/black_item_content"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@mipmap/ic_require"
                android:drawablePadding="5dp"
                android:text="性别"
                android:textColor="@color/gray_item_title"
                android:textSize="13sp" />

            <RadioGroup
                android:id="@+id/rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="男" />

                <RadioButton
                    android:id="@+id/rb_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="女" />
            </RadioGroup>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_require"
                android:drawablePadding="5dp"
                android:text="身份证号"
                android:textColor="@color/gray_item_title"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/et_id"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@null"
                android:ellipsize="end"
                android:maxLength="18"
                android:gravity="center_vertical"
                android:hint="请填写"
                android:inputType="numberDecimal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/black_item_content"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_require"
                android:drawablePadding="5dp"
                android:text="手机号码"
                android:textColor="@color/gray_item_title"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="请填写"
                android:inputType="phone"
                android:paddingLeft="5dp"
                android:maxLength="11"
                android:paddingRight="5dp"
                android:textColor="@color/black_item_content"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_require"
                android:drawablePadding="5dp"
                android:text="出生年月"
                android:textColor="@color/gray_item_title"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_birthday"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:drawableRight="@mipmap/ic_arrow_right_small"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="请选择"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/black_item_content"
                android:textSize="14sp" />
        </LinearLayout>


    </LinearLayout>


    <Button
        android:id="@+id/btn_submit"
        style="@style/BlueSolidButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.5"
        android:text="确定"
        android:textSize="13sp" />


</LinearLayout>