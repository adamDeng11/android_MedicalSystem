<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="www.test.com.medical_system">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="www.test.com.medical_system.CustomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="医疗管理系统"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        
        tools:replace="label"
        tools:targetApi="n">
        <activity
            android:name="www.test.com.medical_system.activity.LoginActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/ImmersiveTheme"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="www.test.com.medical_system.activity.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/ImmersiveTheme" />
        <activity
            android:name="www.test.com.medical_system.activity.AppointmentActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/ImmersiveTheme" />

        <activity
            android:name="www.test.com.medical_system.activity.IntroActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/ImmersiveTheme" />
        <activity
            android:name="www.test.com.medical_system.activity.GuideActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/ImmersiveTheme" />
        <activity
            android:name="www.test.com.medical_system.activity.OthersListActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/ImmersiveTheme" />
        <activity
            android:name="www.test.com.medical_system.activity.RecordListActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/ImmersiveTheme" />
    </application>

</manifest>